# Alden's config last updated 2020-03-12

set $term --no-startup-id st
set $mod Mod1

# DPI settings
# 2k
set $FONTSIZE 10
set $RES 3440x1440
# 4k
#set $FONTSIZE 14
#set $RES 3840x2160

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# KEYBOARD SETTINGS 
exec --no-startup-id setxkbmap us -variant colemak -option caps:escape

# Window displays
for_window [class="^.*"] border pixel 1
gaps inner 15
gaps outer 1
for_window [class="jetbrains-pycharm"] border pixel 1
for_window [instance="__scratchpad"] move scratchpad 
for_window [instance="math"] floating enable
for_window [instance="math"] resize set 1500 600
for_window [instance="math"] move scratchpad
for_window [instance="math"] border pixel 1
for_window [instance="vpn"] floating enable
for_window [instance="vpn"] resize set 1500 600
for_window [instance="vpn"] move scratchpad
for_window [instance="vpn"] border pixel 1
for_window [instance="note"] floating enable
for_window [class="mpv"] border pixel 1
for_window [class="mpv"] floating enable
for_window [class="mpv"] sticky enable
for_window [instance="calendar"] floating enable

### ----------------------------------------------------------
### Basic Binds
### ----------------------------------------------------------
bindsym $mod+Return 		exec $term
bindsym $mod+Shift+Return 	exec --no-startup-id samedir
bindsym $mod+Shift+d		gaps inner current set 0; gaps outer current set 0
bindsym $mod+s			gaps inner current plus 5
bindsym $mod+Shift+s		gaps inner current minus 5

# Kill focused window
bindsym $mod+Shift+q exec xcqr
bindsym $mod+q kill

# Change focus
bindsym $mod+n focus left
bindsym $mod+e focus down
bindsym $mod+i focus up
bindsym $mod+o focus right

# Move focused window
bindsym $mod+Shift+n move left 10
bindsym $mod+Shift+e move down
bindsym $mod+Shift+i move up
bindsym $mod+Shift+o move right

# Split in horizontal orientation
bindsym $mod+h split v

# Split in vertical orientation
bindsym $mod+v split h

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Show audio mixer
bindsym $mod+Shift+a		exec $term -e ncpamixer

# Volume control
bindsym XF86AudioMute exec --no-startup-id "lmc mute &>> /tmp/out"
bindsym XF86AudioLowerVolume    exec --no-startup-id lmc down 1
bindsym XF86AudioRaiseVolume    exec --no-startup-id lmc up 1
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id lmc down 10
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id lmc up 10

# Brightness control
bindsym XF86MonBrightnessDown   exec --no-startup-id xbacklight -dec 1
bindsym XF86MonBrightnessUp     exec --no-startup-id xbacklight -inc 1
bindsym Shift+XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10
bindsym Shift+XF86MonBrightnessUp   exec --no-startup-id xbacklight -inc 10

# Move floating windows
bindsym $mod+Shift+l		exec --no-startup-id "bash ~/.local/bin/i3resize left"
bindsym $mod+Shift+u		exec --no-startup-id "bash ~/.local/bin/i3resize down"
bindsym $mod+Shift+y		exec --no-startup-id "bash ~/.local/bin/i3resize up"
bindsym $mod+Shift+semicolon	exec --no-startup-id "bash ~/.local/bin/i3resize right"

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1 Mail"
set $ws2 "2 Spotify"
set $ws3 "3 Slack"
set $ws4 "4 Web"
set $ws5 "5 Pycharm"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "mail"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# reload the configuration file
bindsym $mod+Shift+r reload ; restart 

# Move any window to the scratchpad
bindsym $mod+m move scratchpad
bindsym $mod+minus scratchpad show

