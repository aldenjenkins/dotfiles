bindsym $mod+r		exec $term -e ranger

# pywal a random wallpaper in the wallpaper directory
bindsym $mod+c                  exec --no-startup-id ~/src/creations/random_pywalpaper/run.sh > /dev/null

# Run script to select the correct camera and show on the corner of screen
bindsym $mod+Shift+c		exec --no-startup-id camtoggle

# Select wallpaper for pywal to use
bindsym $mod+Shift+m            exec --no-startup-id /home/alden/.local/bin/selectwallpaperdirforpywal

# Screenshot managers
bindsym $mod+y                  exec --no-startup-id /home/alden/.local/bin/takescreenshotandaddtoscreenshotdir > /tmp/my_screenshotjob.log 2>&1 
bindsym $mod+u                  exec --no-startup-id /home/alden/.local/bin/viewscreenshots

### ------------------------------------------
### Colors and Font
### ------------------------------------------
# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace

# Set colors from Xresources so that pywal can automatically change them
# Change 'color7' and 'color2' to whatever colors you want i3 to use
# from the generated scheme.
# NOTE: The '#f0f0f0' in the lines below is the color i3 will use if
# it fails to get colors from Xresources.
set_from_resource $fg i3wm.color7 #f0f0f0
set_from_resource $bg i3wm.color2 #f0f0f0

# class                  border  backgr. text indicator child_border
client.focused          #ffffff    #ffffff     #ffffff  #ffffff       #ffffff
client.focused_inactive $bg     $bg     $fg  $bg       $bg
client.unfocused        $bg     $bg     $fg  $bg       $bg
client.urgent           $bg     $bg     $fg  $bg       $bg
client.placeholder      $bg     $bg     $fg  $bg       $bg
client.background       $bg

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    font pango:mono $FONTSIZE
    colors {
        background $bg
        statusline #ffffff
        separator $fg
        focused_workspace  $bg $fg $bg
        active_workspace    $fg $color8 $bg
        inactive_workspace $fg $bg $fg
        urgent_workspace   $fg #ff0000 $fg
    }
    status_command i3blocks
    position top
    mode dock
    modifier None
}

# resize window (you can also use the mouse while holding $mod that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym n resize shrink width 10 px or 10 ppt
        bindsym e resize grow height 10 px or 10 ppt
        bindsym i resize shrink height 10 px or 10 ppt
        bindsym o resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

set $shutdown sudo shutdown -h now
set $reboot sudo reboot
set $netrefresh --no-startup-id sudo systemctl restart NetworkManager
set $hibernate sudo systemctl suspend
