#!/bin/bash

# Interesting... you can't use a variable whose name is len > 1
echo $#
if [ "$#" -ne "1" ]; then
    T=$(rofi -dpi 1 -dmenu -i -lines 0 -p "Number of seconds to set the timer for")
else
    T=$*
fi

while sleep 1s; do 
    if [ "$T" -lt "1" ]; then
        notify-send -t 0 "‚è∞ Timer done" 
        break
    else
        T=$(($T-1));
        clear; 
        echo "$T";
    fi
done
